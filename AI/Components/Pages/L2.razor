            var currentWeightMatrix = weightMatrices[i];

            // Рассчитываем значение для текущей буквы
            for (int j = 0; j < currentWeightMatrix.Length; j++)
            {
                currentAnswer += currentWeightMatrix[j] * data[j];
            }

            // Добавляем результат в список
            switch (i)
            {
                // case 0:
